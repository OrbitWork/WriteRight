{
  "manifest_version": 3,
  "name": "WriteRight - Grammar & Fluency Assistant",
  "version": "2.0.0",
  "description": "Real-time grammar, spelling, punctuation, and fluency correction with clickable suggestions across all websites. Powered by LanguageTool API.",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  
  "host_permissions": [
    "https://api.languagetool.org/*",
    "https://api.languagetoolplus.com/*",
    "https://languagetool.org/*",
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils//grammarCheck.js",
        "content.js"
      ],
      "css": ["styles/content.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "WriteRight - Grammar & Fluency Assistant",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png", 
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png", 
    "128": "assets/icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "styles/content.css",
        "utils/grammarCheck.js",
        "assets/icons/*.png",
        "assets/sounds/*.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.languagetool.org https://api.languagetoolplus.com;"
  },
  
  "commands": {
    "toggle-writeright": {
      "suggested_key": {
        "default": "Ctrl+Shift+W",
        "mac": "Command+Shift+W"
      },
      "description": "Toggle WriteRight on/off"
    },
    "check-grammar": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Check grammar for selected text"
    },
    "accept-suggestion": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Accept first grammar suggestion"
    }
  },
  
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  
  "minimum_chrome_version": "88"
}